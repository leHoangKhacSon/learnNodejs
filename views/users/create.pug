extends ../layout/common.pug
block content
	h1 Create User
	// kiem tra neu co loi thi canh bao loi
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			lable(for="email") Email
			input#email.form-control(type="text", name="email", placeholder="Enter email", value=values ? values.email : '')
		.form-group
			lable(for="password") Password
			input#password.form-control(type="text", name="password", placeholder="Enter password", value=values ? values.password : '')
		.form-group
			lable(for="name") Name
			input#name.form-control(type="text", name="name", placeholder="Enter name", value=values ? values.name : '')

		.form-group
			lable(for="age") Age
			input#age.form-control(type="text", name="age", placeholder="Enter age", value=values ? values.age : '')

		.form-group
			lable(for="avatar") Avatar
			input#avatar.form-control-file(type="file", name="avatar")

		button.btn.btn-primary create