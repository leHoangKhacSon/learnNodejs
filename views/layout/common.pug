html
	head
		link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
		link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.2.0/css/all.css")
		link(rel="stylesheet", href="../styles/cart.css")
		script(src="js/jquery-1.11.1.min.js")
	body
		nav(class="navbar navbar-expand-lg navbar-light bg-light")
			a(class="navbar-brand" href="/") Home
			div.items(class="collapse navbar-collapse" id="navbarSupportedContent")
				ul(class="navbar-nav mr-auto")
					li(class="nav-item d-flex")
						if !user
							a(class="nav-link" href="/auth/login") Login
						//- a(class="nav-link" href="/users") Users
						if !user
							a(class="nav-link" href="/accounts/create") Create Account
						if user
							a(class="nav-link" href="#") Logout
						a(class="nav-link" href="/products") Products
						//- a(class="nav-link" href="#") Logout
						a.cart(class="nav-link" href="/cart")
							i(class="fas fa-shopping-cart fa-2x")
							span= sumCart || ''
						if user
							p(style="font-size: 12px")= user.name
			

		.container.pt-5
			block content
			block main