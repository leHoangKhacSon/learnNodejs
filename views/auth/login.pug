extends ../layout/common.pug
block content
	h1 Login
	// kiem tra neu co loi thi canh bao loi
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login", method="POST")
		.form-group
			lable(for="email") Username
			input#email.form-control(type="text", name="email", placeholder="Enter name", value=values ? values.email : '')

		.form-group
			lable(for="password") Password
			input#password.form-control(type="password", name="password", placeholder="Enter password", value=values ? values.password : '')
		button.btn.btn-primary Login